<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="speedbars.simplewaiter_client.Tasten"
    android:background="@color/colorPrimary">
<!-- Namen des Getränks, Preis des Getränks, Stelle des Getränks-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="15">
        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:text="Getränk hinzufügen"
            android:textStyle="bold"
            android:textSize="70sp"
            android:textAlignment="center"
            android:background="#ff7623"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
        <View
            android:layout_row="1"
            android:layout_columnSpan="2"

            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@color/co  lorPrimaryDark"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:text="Name:"
            android:textSize="50sp"
            android:layout_margin="10dp"/>
        <EditText
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="50sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:background="@color/colorLightGray"/>

        <View
            android:layout_row="3"
            android:layout_columnSpan="2"

            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_column="0"
            android:layout_row="4"
            android:text="Preis:"
            android:textSize="50sp"
            android:layout_margin="10dp"/>
        <EditText
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="50sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:background="@color/colorLightGray"/>
        <View
            android:layout_row="5"
            android:layout_columnSpan="2"

            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"/>
        <Button
            android:layout_row="6"
            android:layout_columnSpan="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Hinzufügen"
            android:textSize="50sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
